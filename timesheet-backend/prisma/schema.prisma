generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model timesheet {
  id           Int      @id @default(autoincrement())
  userId       Int
  date         DateTime
  checkInTime  DateTime
  checkOutTime DateTime
  activity     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())

  user         user     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "TimeSheet_userId_fkey")

  @@index([userId], map: "TimeSheet_userId_fkey")
}

model user {
  id           Int         @id @default(autoincrement())
  studentId    String      @unique(map: "User_studentId_key")
  fullName     String
  passwordHash String
  role         user_role   @default(student)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  email        String?     @db.VarChar(255)
  phone        String?     @db.VarChar(20)
  address      String?     @db.VarChar(255)
  profileImage String?     @db.VarChar(255) // ✅ เพิ่มฟิลด์สำหรับเก็บ URL หรือ path รูป

  timesheet    timesheet[]
}

enum user_role {
  admin
  student
}
